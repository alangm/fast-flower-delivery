


<%- include partials/header %>
<%- include partials/navbar %>


<div class="container">
<div class="col-sm-6 col-sm-offset-3">

	<h1>Signup</h1><hr>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/signup" method="post">
			<div class="form-group">
				<input type="text" class="form-control" name="email" placeholder="Name"><br>
				<input type="text" class="form-control" name="location" placeholder="Location"><br>
				<input type="password" class="form-control" name="password" placeholder="Password">
			</div>


						<div class="text-right">
							<button type='submit' class="btn btn-default text btn-md">Signup</button>
						</div>
	</form>






		<br><hr><br>

		<p>Already have an account? <a href="/login">Login</a></p>
		<p>Or go <a href="/">home</a>.</p>


	</div>
	</div>

	<script src="/socket.io/socket.io.js"></script>
	<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
	<script>
		$(function () {
			var socket = io();
			$('form').submit(function(){
				socket.emit('shop_created', {
					name     : $('[name="email"]').val(),
					location : $('[name="location"]').val(),
					password : $('[name="password"]').val()
				});
				return true;
			});
		});
	</script>

	<%- include partials/footer %>
